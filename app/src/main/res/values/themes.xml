<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NearestToiletPL" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/blue_color</item>
        <item name="colorPrimaryVariant">@color/dark_gray_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/dark_gray_color</item>
        <item name="colorSecondaryVariant">@color/blue_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:background">@color/background_color</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/montserrat</item>
        <item name="android:textColor">@color/blue_color</item>
    </style>

    <style name="AppWidgetStyle" parent="android:Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>